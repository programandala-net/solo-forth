  \ doc{
  \
  \ inverted  ( -- )
  \
  \ Invert the pixels of the whole screen.
  \
  \ }doc

[unneeded] water ?(  need z80-asm,

code water  ( -- )

  b push, 20 b ld#,
  rbegin  57FF h ldp#,
          rbegin   m rrc, h decp, h 6 bit,  z? runtil
  rstep   b pop, jpnext,  end-code ?)

