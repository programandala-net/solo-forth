[unneeded] r'@ dup
?\ : r'@  ( -- x1 ) ( R: x1 x2 -- x1 x2 )
?\   r> 2r@ drop swap >r  ;

  \ doc{
  \
  \ r'@  ( -- x1 ) ( R: x1 x2 -- x1 x2 )
  \
  \ }doc

