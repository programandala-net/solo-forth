  dw cr_,paren_dot_quote_
  _string "Lenght in bytes:  "
  _literal trdos_variable.file_length_in_bytes
  dw fetch_,u_dot_
  dw cr_,paren_dot_quote_
  _string "Lenght in sectors:"
  _literal trdos_variable.file_length_in_sectors
  dw c_fetch_,dot_
  dw exit_

