  _colon_header to_file_,'>file'

; ----
; : >file ( ca1 len1 ca2 len2 -- ior )
;   filename>fda file-length ! file-address ! (>file) ;
; ----

  dw filename_to_fda_
  dw file_length_,store_
  dw file_address_,store_
  dw paren_to_file_
  dw exit_

endif

