	composite -gravity east -geometry +048+000 tmp/$(cover).title.png $@ $@
	composite -gravity east -geometry +048+072 tmp/$(cover).trdos_subtitle.png $@ $@
	composite -gravity east -geometry +048+256 tmp/$(cover).author.png $@ $@
